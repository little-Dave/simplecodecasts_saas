<div class="row">
  <div class="colspan-md-6 colspan-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro account</h1>
      <p>Sign up for $10 per month to get access to the community</br><strong>+</strong></br> member contact information!</p>
    <% else %>
      <h1>Basic account</h1>
      <p>Sign up for free and get basic access to the community!</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
